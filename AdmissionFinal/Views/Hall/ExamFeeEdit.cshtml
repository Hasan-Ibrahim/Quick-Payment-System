@model AdmissionFinal.Entity.ExamFee

@{
    ViewBag.Title = "ExamFeeEdit";
}
<div class="page-header">
	<h2>@User.Identity.Name</h2>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

	@using (Html.BeginForm()) {
		@Html.ValidationSummary(true)
		<fieldset>
			<legend>Edit Exam Fee</legend>
			<div class="control-group">
				<div class="controls">
					@Html.HiddenFor(model => model.ExamFeeId)
				</div>
			</div>
			<div class="control-group">
				@Html.LabelFor(model => model.ExamFee1)
				<div class="controls">
					@Html.EditorFor(model => model.ExamFee1)
					@Html.ValidationMessageFor(model => model.ExamFee1)
				</div>
			</div>

			<div class="control-group">
				@Html.LabelFor(model => model.CentreFee)
				<div class="controls">
					@Html.EditorFor(model => model.CentreFee)
					@Html.ValidationMessageFor(model => model.CentreFee)
				</div>
			</div>

			<div class="control-group">
				@Html.LabelFor(model => model.TranscriptFee)
				<div class="controls">
					@Html.EditorFor(model => model.TranscriptFee)
					@Html.ValidationMessageFor(model => model.TranscriptFee)
				</div>
			</div>

			<div class="control-group">
				<div class="controls">
					@Html.HiddenFor(model => model.HallId)
				</div>
			</div>

			<div class="control-group">
				@Html.LabelFor(model => model.LastDate)
				<div class="controls">
					@Html.EditorFor(model => model.LastDate)
					@Html.ValidationMessageFor(model => model.LastDate)
				</div>
			</div>

		<div class="form-actions">
				<input type="submit" class="btn btn-primary" value="Submit" />
		</div>
	</fieldset>
    
}

<div>
	@Html.ActionLink("Back to List", "Index")
</div>

